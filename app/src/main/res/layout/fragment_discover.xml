<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="tech.pauly.findapet.discover.DiscoverViewModel" />

        <import type="tech.pauly.findapet.R" />

        <import type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <tech.pauly.findapet.utils.FilterChipListLayout
            android:id="@+id/filters_bar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/half_margin"
            android:paddingRight="@dimen/half_margin"
            android:paddingTop="@dimen/half_margin"
            android:visibility="@{viewModel.locationMissing ? View.GONE : View.VISIBLE}"
            app:chipList="@{viewModel.chipList}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:locationChip="@{viewModel.locationChip}" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/discover_swipe_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="0dp"
            android:paddingTop="@dimen/standard_margin"
            android:visibility="@{viewModel.errorVisible ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filters_bar"
            app:refreshing="@{viewModel.refreshing}"
            app:swipeRefreshListener="@{viewModel::requestPermissionToLoad}">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/animal_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adapter="@{viewModel.listAdapter}"
                app:loadMoreListener="@{viewModel::loadMoreAnimals}"
                app:recyclerViewGridSpan="@{viewModel.columnCount}" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:visibility="@{viewModel.locationMissing ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <TextView
                android:id="@+id/missing_location_message"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/half_margin"
                android:layout_marginTop="30dp"
                android:gravity="end"
                android:text="@string/location_missing"
                android:textAppearance="@style/FontStrongBody"
                android:textColor="@color/purpleStandard"
                app:layout_constraintEnd_toStartOf="@id/missing_location_arrow"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/missing_location_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:contentDescription="@string/missing_location_arrow"
                android:rotation="-90"
                android:src="@drawable/ic_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:visibility="@{viewModel.animalsMissing ? View.VISIBLE : View.GONE}"
            tools:visibility="visible">

            <TextView
                android:id="@+id/missing_animals_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:gravity="center"
                android:text="@string/missing_animals_header"
                android:textAppearance="@style/FontStrongHeader"
                android:textColor="@color/purpleStandard"
                app:layout_constraintBottom_toTopOf="@+id/missing_animals_body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/missing_animals_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:gravity="center"
                android:text="@string/missing_animals_body1"
                android:textAppearance="@style/FontBody"
                android:textColor="@color/textLight"
                app:layout_constraintBottom_toTopOf="@+id/missing_animal_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/missing_animals_header" />

            <ImageView
                android:id="@+id/missing_animal_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descriptor_pet_image"
                android:src="@drawable/ic_cat_dog"
                app:layout_constraintBottom_toTopOf="@+id/missing_animals_body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/missing_animals_body1" />

            <TextView
                android:id="@+id/missing_animals_body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:gravity="center"
                android:text="@string/missing_animals_body2"
                android:textAppearance="@style/FontBody"
                android:textColor="@color/textLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/missing_animal_image" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>