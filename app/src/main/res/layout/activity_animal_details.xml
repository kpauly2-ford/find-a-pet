<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="tech.pauly.findapet.discover.AnimalDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/purpleStandard"
                android:elevation="8dp"
                android:theme="@style/ToolbarTheme"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Pet Details"
                app:titleTextAppearance="@style/FontStrongHeader"
                app:titleTextColor="@android:color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/standard_margin"
                android:elevation="8dp"
                android:src="@drawable/selector_favorite"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintEnd_toEndOf="@id/toolbar"
                app:layout_constraintTop_toTopOf="@id/toolbar" />

            <android.support.v4.view.ViewPager
                android:id="@+id/animal_images_view_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/purpleVeryLight"
                android:elevation="4dp"
                app:adapter="@{viewModel.imagesPagerAdapter}"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:offscreenPageLimit="@{viewModel.imagesPageLimit}"
                app:onPageChange="@{viewModel.imagePageChange}" />

            <tech.pauly.findapet.utils.PageIndicatorLayout
                android:id="@+id/page_indicator"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:elevation="8dp"
                app:indicatorCount="@{viewModel.imagesCount}"
                app:indicatorPosition="@{viewModel.currentImagePosition}"
                app:layout_constraintBottom_toBottomOf="@id/animal_images_view_pager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="asdf" />

            <TextView
                android:id="@+id/animal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingStart="@dimen/standard_margin"
                android:text="@{viewModel.name}"
                android:textAppearance="@style/FontMaxHeader"
                app:layout_constraintBottom_toTopOf="@+id/animal_breed"
                tools:text="Mozart" />

            <TextView
                android:id="@+id/animal_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:elevation="4dp"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingStart="@dimen/standard_margin"
                android:text="@{viewModel.breeds}"
                android:textAppearance="@style/FontHeader"
                app:layout_constraintBottom_toTopOf="@+id/page_indicator"
                tools:text="Ragamuffin" />

            <tech.pauly.findapet.shared.WrapViewPager
                android:id="@+id/animal_details_view_pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:adapter="@{viewModel.detailsPagerAdapter}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animal_details_tabs" />

            <android.support.design.widget.TabLayout
                android:id="@+id/animal_details_tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animal_images_view_pager"
                app:tabIndicatorColor="@color/purpleDark"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/purpleDark"
                app:tabTextAppearance="@style/FontStrongBody"
                app:tabTextColor="@color/purpleStandard"
                app:viewPager="@{(animalDetailsViewPager)}" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>